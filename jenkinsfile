pipeline {
  agent any
  stages {
    stage('Git Clone') {

      steps {
        echo 'Clone the repo'
      }
    }
    stage('NPM Install') {
          steps {
           sh '''npm install'''
          }
        }
        stage('Build') {
          steps {
           sh '''npm run-script build
           sudo chmod -R 400 uthkalsoftware.pem'''
          }
        }
        stage('deploy') {
        steps {
           sh "sudo chmod -R 400 uthkalsoftware.pem"
           }
        }
  }
}
