pipeline {
  agent any
  stages {
    stage('Git Clone') {

      steps {
        echo 'Clone the repo'
      }
    }
    stage('NPM Install') {
          steps {
           sh '''npm install'''
          }
        }
        stage('Build') {
          steps {
           sh '''npm run-script build
           sudo chmod -R 400 uthkalsoftware.pem
           ssh -i uthkalsoftware.pem ubuntu@ec2-52-66-24-23.ap-south-1.compute.amazonaws.com'''
          }
        }
  }
}
